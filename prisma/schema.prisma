generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id           Int            @id @default(autoincrement())
  discordId    String         @unique
  username     String         @unique
  email        String         @unique
  point        Int            @default(0)
  cart         Json
  history      history[]
  topupHistory topupHistory[]
  createdAt    DateTime       @default(now())
}

model products {
  id           Int     @id @default(autoincrement())
  name         String  @unique
  label        String  @unique
  price        Int
  image        String
  video        String
  category     String  @default("")
  description  String  @db.LongText
  downloadLink String  @default("")
  version      String  @default("0.1")
  buyedCount   Int     @default(0)
  stock        Int     @default(0)
  isNew        Boolean @default(false)
}

model discountCode {
  id          Int    @id @default(autoincrement())
  code        String @unique
  minDiscount Int
  maxDiscount Int
  percent     Int    @default(0)
}

model history {
  id           Int       @id @default(autoincrement())
  name         String
  ip           String    @default("127.0.0.1")
  tokenKey     String    @default("")
  discount     String?
  user         users     @relation(fields: [userId], references: [id])
  userId       Int
  version      String    @default("0.1")
  expire       DateTime?
  ipchangecd   DateTime?
  tokenresetcd DateTime?
  createdAt    DateTime  @default(now())
}

model topupHistory {
  id        Int      @id @default(autoincrement())
  user      users    @relation(fields: [userId], references: [id])
  userId    Int
  refNo     String
  method    String
  amount    Int
  status    String
  createdAt DateTime @default(now())
}

model category {
  id    Int    @id @default(autoincrement())
  label String
  name  String @default("")
  image String
}

model webConfig {
  id        Int  @id @default(autoincrement())
  webconfig Json
}

model AdminLog {
  id        Int      @id @default(autoincrement())
  reason    String
  email     String
  ipaddress String
  timestamp DateTime @default(now())
}
